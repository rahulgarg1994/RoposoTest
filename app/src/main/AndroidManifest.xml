<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahul.roposo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CardsActivity"
            android:label="@string/title_activity_story_cards"
            android:launchMode="singleTop"
            >
        </activity>
        <activity
            android:name=".activities.DetailActivity"
            android:label="@string/title_activity_story_details"
            android:parentActivityName=".activities.CardsActivity"
            android:launchMode="singleTop"
        >
        </activity>
    </application>

</manifest>
